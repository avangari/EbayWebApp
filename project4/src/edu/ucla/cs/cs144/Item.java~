package edu.ucla.cs.cs144;

import java.util.LinkedList;

public class Item{
	int Item_ID;
	String name;
	LinkedList<String> categories;
	double current_bid;
	double buy_price;
	double first_bid;
	int no_of_bids;
	Bid[] bids;
	String latitude;
	String longitude;
	String location;
	String country;
	Date started;
	Date ends;
	String seller_id;
	int seller_rating;
	String decription;
	
	public Item()
	{
		categories = new LinkedList<String>();
		latitude = "";
		longitude = "";
		buy_price = -1;
	}
	
	public void allocateBids()
	{
		this.bids = new Bid[no_of_bids];
	}
}


